{
  "external_tools": {
    "monitoring": [
      {
        "button_text": "Claude Monitor",
        "command": "claude-monitor",
        "tooltip": "Real-time monitoring tool"
      }
    ],
    "configuration": [
      {
        "button_text": "Config Browser (ccexp)",
        "command": "ccexp",
        "tooltip": "Launch interactive config browser"
      },
      {
        "button_text": "Claude Code Templates",
        "command": "npx claude-code-templates@latest",
        "tooltip": "Claude Code template system"
      },
      {
        "button_text": "Tweak CC",
        "command": "npx tweakcc",
        "tooltip": "Configuration tweaker for Claude Code"
      },
      {
        "button_text": "StatusLine Config",
        "command": "npx ccstatusline@latest",
        "tooltip": "StatusLine configurator"
      }
    ],
    "claude_code_templates": [
      {
        "button_text": "Claude Code Templates",
        "command": "npx claude-code-templates@latest",
        "tooltip": "Main templates dashboard"
      },
      {
        "button_text": "Analytics",
        "command": "npx claude-code-templates@latest --analytics",
        "tooltip": "Claude Code Analytics"
      },
      {
        "button_text": "Health Check",
        "command": "npx claude-code-templates@latest --health-check",
        "tooltip": "Claude Code Health Check"
      },
      {
        "button_text": "Commands Analysis",
        "command": "npx claude-code-templates@latest --command-stats -d $HOME",
        "tooltip": "Commands Analysis for User"
